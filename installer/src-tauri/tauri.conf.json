{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Arduino Myra Robot Installer",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "os": {
        "all": true
      },
      "window": {
        "setMinSize": true,
        "setFullscreen": true
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "../resources/arduino-cli/arduino-cli",
            "sidecar": true,
            "args": true
          }
        ],
        "all": false,
        "open": true
      },
      "fs": {
        "scope": [
          "$RESOURCE/sketch.bin"
        ],
        "readFile": true
      }
    },
    "windows": [
      {
        "title": "Arduino Myra Robot Installer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "resources": [
        "../resources/sketch.bin"
      ],
      "externalBin": [
        "../resources/arduino-cli/arduino-cli"
      ],
      "active": true,
      "targets": "all",
      "identifier": "cc.arduino.myra-installer",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}